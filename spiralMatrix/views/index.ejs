<html lang="en">
    <head>
        <meta charset="UTF-8"> 
        <meta name="viewport" content = "width=device-width, initial-scale=1.0">
        <title>Spiral Matrix Generator | <%= title%></title>
        <link rel="stylesheet" href="/style.css">
    
    </head>
    <body>
        <h1>Home</h1>
        <h2>Spiral Matrix Generator</h2>

        <div class="create_matrix">
            <form action="" method="POST">
                <label for="dim"> Please enter the dimension (1 to 100):  </label>
                <input type="number" id="dim" required name="dim" min="1" max="100">
                <input type="submit" value="submit dimension">
            </form>

        </div>
        <div>
            <p>Entered dimension:<%= dim%></p>
            <%- matrix %>
        </div>

    </body>

</html>